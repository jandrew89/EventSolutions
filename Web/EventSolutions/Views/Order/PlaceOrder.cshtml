@model OrderViewModel

<div style="padding-top:3em;padding-left:2em;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Place a New Order<br />
                <small>It's what keeps us in business!</small>
            </h1>
        </div>
    </div>
    <form id="full-page-form" action="#" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="row form-group">
                    <label class="col-xs-12">Customer</label>
                    <div class="col-xs-9"><input type="text" asp-for="@Model.FullName" class="form-control" /></div>
                    <div class="col-xs-3"><button class="btn btn-default">Lookup</button></div>
                </div>
                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Order Date</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Stage</label>
                    <select class="form-control">
                        <option>Intake</option>
                        <option>Fulfilling Inventory</option>
                        <option>Billing</option>
                        <option>Preparing for Shipment</option>
                        <option>Shipped</option>
                        <option>Delivery Confirmed</option>
                        <option>On Hold</option>
                    </select>
                </div>
                @* Extract out *@
                <div class="form-group">
                    @foreach (var item in Model.OrderProducts)
                        {
                            <div class="row">
                                <input type="hidden" asp-for="@item.Id" />
                                <div class="col-xs-6"><label>@item.Name</label></div>
                                <div class="col-xs-6  pull-right"><input asp-for="@Model.OrderSummary.Quantity" /></div>

                            </div>

                        }
                <div class="form-group">
                    <label>Shipping Address</label>
                    <select class="form-control">
                        <option>Mailing Address</option>
                        <option>Billing Address</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Special Order Instructions</label>
                    <textarea type="text" class="form-control" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label>Additional Notes</label>
                    <textarea type="text" class="form-control" rows="5"></textarea>
                </div>
                <input type="submit" class="btn btn-primary pull-right">
            </div>
        </div>
            </div>
    </form>
</div>
