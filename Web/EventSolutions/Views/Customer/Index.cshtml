@model IEnumerable<Customer>

<div class="container-fluid" style="padding-top:3em">

    <div class="rptitleleft">List of Customers</div>

    <table class="table table-striped table-hover" style="margin-top:1em">
        <thead class="bg-primary">
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                    @*@Html.ActionLink("Full Name", "Index", new { sort = ViewBag.FullNameSort })*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                    @*@Html.ActionLink("Address", "Index", new { sort = ViewBag.AddressSort })*@
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                    @*@Html.ActionLink("Email", "Index", new { sort = ViewBag.EmailSort })*@
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <a class="btn btn-success btn-sm" asp-route-id="@item.Id" asp-controller="Order" asp-action="PlaceOrder">Place Order</a>
                        <a class="btn btn-info btn-sm" asp-route-id="@item.Id">Past Orders</a>

                    </td>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.LastName)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>


                    <td>
                        <div class="btn-group">
                            @*<a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a>*@
                        </div>
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>